<<widget "SG_display_quality">>
    <<silently>>
    <<set _plot = _args[0]>>

    /* 定義每個 bed 對應的名稱 */
    <<set _bedNames = {
        water: "池子",
        earth: "土壤",
        wood: "木頭",
        hive: "蜂箱",
        cow: "長得像奶牛乳房的奇怪物體",
        bird_nest: "樹上的鳥巢",
        human: "長得像人的奇怪物體",
        oyster: "水塘邊的珍珠貝",
        chicken: "田邊的放山雞",
        kitchen: "萬能料理機",
        river: "水產養殖槽",
        sea: "海水槽"
    }>>

    <<set _bedType = _bedNames[_plot.bed] || _plot.bed>>

    /* 定義品質對應的描述前綴 */
    <<set _qualityPrefixes = {
        blue: "blue",
        lblue: "lblue",
        teal: "teal",
        green: "green",
        default: "red"
    }>>

    /* 針對每種 bed 類型，定義對應的品質描述文字 */
    <<set _bedQualityDesc = {
        wood: ["破爛的","普通的","優良的","上好的"],
        hive: ["迷你的","小的","中等的","特大的"],
        cow: ["瘦弱的","普通的","碩大的","無與倫比的"],
        bird_nest: ["一個","幾個","很多個","無數個"],
        chicken: ["一隻","幾隻","很多隻","無數隻"],
        human: ["藍色","普通的","良好的","優良的"],
        oyster: ["藍色","普通的","良好的","優良的"],
        kitchen: ["藍色","普通的","改良的","頂級的"],
        river: ["藍色","普通的","改良的","頂級的"],
        sea: ["藍色","普通的","改良的","頂級的"],
        default: ["贫瘠的","普通的","肥沃的","沃腴的"]
    }>>

    <<set _q = Math.clamp(_plot.quality, 1, 4) - 1>>
    <<set _descList = _bedQualityDesc[_plot.bed] || _bedQualityDesc.default>>
    <<set _prefix = _descList[_q] || "错误">>
    <<set _colorMap = ["blue","lblue","teal","green"]>>
    <<set _color = _colorMap[_q] || "red">>

    <<set $_result = `<span class="${_color}">${_prefix}${_bedType}</span>`>>
    <</silently>>
    <<print $_result>>
<</widget>>

