    <<set _careText = {
        water: { done: "無需特別照顧", pending: "尚未加水" },
        earth: { done: "已澆水", pending: "尚未澆水" },
        wood: { done: "已澆水", pending: "尚未澆水" },
        hive: { done: "已打掃乾淨", pending: "尚未打掃" },
        cow: { done: "已清理", pending: "尚未清理" },
        bird_nest: { done: "已打掃並提供必要食物與水", pending: "尚未清理" },
        chicken: { done: "已打掃並提供必要食物與水", pending: "尚未清理" },
        oyster: { done: "已給食物", pending: "尚未餵食" },
        kitchen: { done: "已保養完成", pending: "尚未保養" },
        river: { done: "已保養並餵食完成", pending: "尚未保養及投喂" },
